<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <sys:String x:Key="Sidebar.Title">RoboScanner</sys:String>
    <sys:String x:Key="Nav.Title">Navigation</sys:String>
    <sys:String x:Key="Nav.Scan">Scan</sys:String>
    <sys:String x:Key="Nav.GroupSetup">Group Setup</sys:String>
    <sys:String x:Key="Nav.Groups">Groups</sys:String>
    <sys:String x:Key="Nav.Settings">Settings</sys:String>
    <sys:String x:Key="Nav.Log">Log</sys:String>
    <sys:String x:Key="Nav.Stats">Statistics</sys:String>

    <sys:String x:Key="Scan.Program">Program:</sys:String>
    <sys:String x:Key="Scan.Status">Status:</sys:String>
    <sys:String x:Key="Scan.Program.Running">Running</sys:String>
    <sys:String x:Key="Scan.Program.Stopped">Stopped</sys:String>
    <sys:String x:Key="Scan.State.Wait">Waiting</sys:String>
    <sys:String x:Key="Scan.State.Scanning">Scanning…</sys:String>
    <sys:String x:Key="Scan.State.Done">Done</sys:String>

    <sys:String x:Key="Scan.Btn.Start">Start</sys:String>
    <sys:String x:Key="Scan.Btn.Stop">Stop</sys:String>
    <sys:String x:Key="Scan.Btn.ScanOnce">Scan</sys:String>

    <sys:String x:Key="Scan.LastResult">Last result</sys:String>
    <sys:String x:Key="Scan.Group">Group:</sys:String>
    <sys:String x:Key="Scan.Time">Time:</sys:String>
    <sys:String x:Key="Scan.Sizes">Sizes (mm)</sys:String>
    <sys:String x:Key="Scan.BottomCam">Bottom camera</sys:String>
    <sys:String x:Key="Scan.SideCam">Side camera</sys:String>


    <sys:String x:Key="Settings.Title">Settings</sys:String>
    <sys:String x:Key="Settings.Language">Interface language</sys:String>
    <sys:String x:Key="Settings.Lang.RU">Русский</sys:String>
    <sys:String x:Key="Settings.Lang.EN">English</sys:String>
    <sys:String x:Key="Settings.Lang.IT">Italiano</sys:String>

    <!-- Group Setup -->
    <sys:String x:Key="GroupSetup.Title">Group Setup</sys:String>
    <sys:String x:Key="GroupSetup.Save">Save</sys:String>
    <sys:String x:Key="GroupSetup.Load">Load</sys:String>
    <sys:String x:Key="GroupSetup.Reset">Reset (default 15)</sys:String>

    <sys:String x:Key="GroupSetup.Col.Name">Name</sys:String>
    <sys:String x:Key="GroupSetup.Col.Description">Description</sys:String>
    <sys:String x:Key="GroupSetup.Col.MaxX">MaxX (mm)</sys:String>
    <sys:String x:Key="GroupSetup.Col.MaxY">MaxY (mm)</sys:String>
    <sys:String x:Key="GroupSetup.Col.MaxZ">MaxZ (mm)</sys:String>

    <sys:String x:Key="GroupSetup.Hint">Leave MaxY/MaxZ empty if not needed. You can save and load changes.</sys:String>

    <sys:String x:Key="GroupSetup.SaveOk.Title">Save</sys:String>
    <sys:String x:Key="GroupSetup.SaveOk.Body">Rules saved.</sys:String>
    <sys:String x:Key="GroupSetup.LoadOk.Title">Load</sys:String>
    <sys:String x:Key="GroupSetup.LoadOk.Body">Rules loaded.</sys:String>
    <sys:String x:Key="GroupSetup.ResetConfirm.Title">Reset</sys:String>
    <sys:String x:Key="GroupSetup.ResetConfirm.Body">Reset to 15 default groups?</sys:String>

    <!-- Log page -->
    <sys:String x:Key="Log.Title">Event log</sys:String>
    <sys:String x:Key="Log.OpenFile">Open file</sys:String>
    <sys:String x:Key="Log.OpenFolder">Open folder</sys:String>
    <sys:String x:Key="Log.Clear">Clear list</sys:String>
    <sys:String x:Key="Log.OpenTable">Open in grid…</sys:String>
    <sys:String x:Key="Log.Col.Time">Time</sys:String>
    <sys:String x:Key="Log.Col.Level">Level</sys:String>
    <sys:String x:Key="Log.Col.Source">Source</sys:String>
    <sys:String x:Key="Log.Col.Message">Message</sys:String>
    <sys:String x:Key="Log.Col.Data">Data</sys:String>
    <sys:String x:Key="Log.Hint">Log is written to logs/app.log (one JSON line per entry).</sys:String>

    <!-- Log viewer window -->
    <sys:String x:Key="LogViewer.Title">Log viewer</sys:String>
    <sys:String x:Key="LogViewer.Pick">Choose file…</sys:String>
    <sys:String x:Key="LogViewer.Reload">Reload</sys:String>
    <sys:String x:Key="LogViewer.From">From:</sys:String>
    <sys:String x:Key="LogViewer.To">To:</sys:String>
    <sys:String x:Key="LogViewer.Type">Type:</sys:String>
    <sys:String x:Key="LogViewer.Type.All">All</sys:String>
    <sys:String x:Key="LogViewer.Type.Application">Application</sys:String>
    <sys:String x:Key="LogViewer.Type.Scan">Scan</sys:String>
    <sys:String x:Key="LogViewer.Type.Other">Other</sys:String>
    <sys:String x:Key="LogViewer.Error.ReadTitle">Error</sys:String>
    <sys:String x:Key="LogViewer.Error.ReadBody">Failed to read log file:</sys:String>
    <sys:String x:Key="LogViewer.Status.FileNotSelected">No file selected</sys:String>
    <sys:String x:Key="LogViewer.Status.CountFormat">Shown: {0} / Total: {1}</sys:String>

    <!-- Scan data display -->
    <sys:String x:Key="Log.Scan.DisplayFormat">Group - {0} - x ( {1} ) - y ( {2} ) - z ( {3} ) - {4} ( {5} )</sys:String>

    <!-- Groups page -->
    <sys:String x:Key="Groups.Title">Groups</sys:String>
    <sys:String x:Key="Groups.LastLabel">Last:</sys:String>
    <sys:String x:Key="Groups.Tooltip.Clear">Clear group</sys:String>

    <!-- Dialogs / messages -->
    <sys:String x:Key="Groups.Confirm.ResetCount.Title">Confirmation</sys:String>
    <sys:String x:Key="Groups.Confirm.ResetCount.Body">Reset counter of group “{0}” (#{1}) to 0?</sys:String>

    <sys:String x:Key="Groups.Confirm.ClearGroup.Title">Confirmation</sys:String>
    <sys:String x:Key="Groups.Confirm.ClearGroup.Body">Clear group “{0}” (#{1})? The counter and last measurements will be cleared.</sys:String>

    <sys:String x:Key="Groups.Alert.CannotClearWhileRunning.Title">Warning</sys:String>
    <sys:String x:Key="Groups.Alert.CannotClearWhileRunning.Body">Cannot clear a group while running. Please pause scanning.</sys:String>

    <sys:String x:Key="Groups.Alert.Cleared.Title">Done</sys:String>
    <sys:String x:Key="Groups.Alert.Cleared.Body">Group “{0}” has been cleared.</sys:String>

    <sys:String x:Key="Groups.Alert.ResetDone.Title">Done</sys:String>
    <sys:String x:Key="Groups.Alert.ResetDone.Body">Group “{0}” has been reset. You can continue scanning.</sys:String>

    <!-- Scan: message boxes -->
    <sys:String x:Key="Scan.Alert.NoActiveGroups.Title">Warning</sys:String>
    <sys:String x:Key="Scan.Alert.NoActiveGroups.Body">No active groups in settings. Specify sizes for at least one group.</sys:String>

    <sys:String x:Key="Scan.Alert.GroupOverflow.Title">Attention</sys:String>
    <sys:String x:Key="Scan.Alert.GroupOverflow.Body">Group “{0}” is full ({1}). Scanning has been paused.</sys:String>
    
    <!-- Stats -->
    <sys:String x:Key="Stats.HeaderPrimary">Statistics (basic)</sys:String>
    <sys:String x:Key="Stats.SessionFromStart">From session start</sys:String>
    <sys:String x:Key="Stats.FromLabel">From:</sys:String>
    <sys:String x:Key="Stats.ToLabel">To:</sys:String>
    <sys:String x:Key="Stats.TotalLabel">Scanned:</sys:String>
    <sys:String x:Key="Stats.Range.NotSelected">Select both “From” and “To” dates</sys:String>
    <sys:String x:Key="Stats.Range.Invalid">Invalid range</sys:String>
    <sys:String x:Key="Stats.Placeholder.Second">(Widgets area #2)</sys:String>
    <sys:String x:Key="Stats.Placeholder.Third">(Widgets area #3)</sys:String>






</ResourceDictionary>
