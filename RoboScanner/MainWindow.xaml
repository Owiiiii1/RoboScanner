<Window x:Class="RoboScanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RoboScanner" Height="820" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FFF8F9FB">
    <Window.Resources>
        <!-- Стиль кнопок сайдбара -->
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Background" Value="#FFFFFFFF"/>
            <Setter Property="BorderBrush" Value="#FFE5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter Margin="2" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFF3F4F6"/>
                </Trigger>
                <Trigger Property="Tag" Value="Active">
                    <Setter Property="Background" Value="#FFEEF2FF"/>
                    <Setter Property="BorderBrush" Value="#FF6366F1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Заголовок секции в контенте -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        <!-- Чип статуса -->
        <Style x:Key="StatusChip" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Background" Value="#FFE5E7EB"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#FFFFFFFF" BorderBrush="#FFE5E7EB" BorderThickness="0,0,1,0">
            <StackPanel Margin="12">
                <TextBlock Text="{DynamicResource Sidebar.Title}" FontSize="20" FontWeight="Bold" Margin="4,4,4,12"/>
                <TextBlock Text="{DynamicResource Nav.Title}" Foreground="#FF6B7280" Margin="4,0,4,8"/>

                <Button x:Name="BtnScan" Style="{StaticResource SidebarButton}" Content="{DynamicResource Nav.Scan}" Click="BtnScan_Click" Tag="Active"/>
                <Button x:Name="BtnGroupSetup" Style="{StaticResource SidebarButton}" Content="{DynamicResource Nav.GroupSetup}" Click="BtnGroupSetup_Click"/>
                <Button x:Name="BtnGroups" Style="{StaticResource SidebarButton}" Content="{DynamicResource Nav.Groups}" Click="BtnGroups_Click"/>
                <Button x:Name="BtnSettings" Style="{StaticResource SidebarButton}" Content="{DynamicResource Nav.Settings}" Click="BtnSettings_Click"/>
                <Button x:Name="BtnLog" Style="{StaticResource SidebarButton}" Content="{DynamicResource Nav.Log}" Click="BtnLog_Click"/>
                <Button x:Name="BtnStats" Style="{StaticResource SidebarButton}" Content="{DynamicResource Nav.Stats}" Click="BtnStats_Click"/>

                <StackPanel Margin="0,16,0,0">
                    <TextBlock Text="Справка" Foreground="#FF6B7280" Margin="4,0,4,6"/>
                    <TextBlock Text="• Сканирование — главный экран" Foreground="#FF6B7280" FontSize="12"/>
                    <TextBlock Text="• Группы — счётчики по каждой группе" Foreground="#FF6B7280" FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Column="1">
            <ContentControl x:Name="ContentHost"/>
        </Grid>
    </Grid>
</Window>
