<UserControl x:Class="RoboScanner.Views.GroupSetupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:conv="clr-namespace:RoboScanner.Helpers">
    <UserControl.Resources>
        <!-- Конвертер для nullable double (как у тебя) -->
        <conv:NullableDoubleConverter x:Key="NullDoubleConverter" />

        <x:Array x:Key="RobotGroups" Type="{x:Type sys:Int32}">
            <sys:Int32>1</sys:Int32>
            <sys:Int32>2</sys:Int32>
            <sys:Int32>3</sys:Int32>
            <sys:Int32>4</sys:Int32>
            <sys:Int32>5</sys:Int32>
            <sys:Int32>6</sys:Int32>
            <sys:Int32>7</sys:Int32>
            <sys:Int32>8</sys:Int32>
            <sys:Int32>9</sys:Int32>
            <sys:Int32>10</sys:Int32>
            <sys:Int32>11</sys:Int32>
            <sys:Int32>12</sys:Int32>
            <sys:Int32>13</sys:Int32>
            <sys:Int32>14</sys:Int32>
            <sys:Int32>15</sys:Int32>
        </x:Array>

        <!-- Стиль кнопки Вкл/Выкл в ячейке -->
        <Style x:Key="EnableToggleButton" TargetType="Button">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BAE6FD"/>
            <Setter Property="Background" Value="#F0F9FF"/>
            <!-- светло-голубая -->
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- Если группа активна — зелёный фон и надпись "Выключить" -->
                <DataTrigger Binding="{Binding IsActive}" Value="True">
                    <Setter Property="Background" Value="#D1FAE5"/>
                    <!-- зелёный пастель -->
                    <Setter Property="BorderBrush" Value="#34D399"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{DynamicResource GroupSetup.Title}"
                   FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>

        <DataGrid x:Name="GridRules"
                  Grid.Row="1"
                  ItemsSource="{Binding Rules}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  RowHeaderWidth="0">
            <DataGrid.Columns>

                <!-- 1) Тоггл Вкл/Выкл -->
                <DataGridTemplateColumn Width="110">
                    <DataGridTemplateColumn.Header>
                    <TextBlock Text="{DynamicResource GroupSetup.Col.Enable}"/>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Click="ToggleActive_Click">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource EnableToggleButton}">
                                        <!-- По умолчанию: Включить -->
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <TextBlock><Run Text="{DynamicResource GroupSetup.Toggle.Enable}"/></TextBlock>
                                            </Setter.Value>
                                        </Setter>
                                        <!-- Активна -> зелёный стиль уже в EnableToggleButton, меняем подпись -->
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                <Setter Property="Content">
                                                    <Setter.Value>
                                                        <TextBlock><Run Text="{DynamicResource GroupSetup.Toggle.Disable}"/></TextBlock>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>


                <!-- 2) Группа робота (всегда виден ComboBox со стрелкой) -->
                <DataGridTemplateColumn Width="140">
                    <DataGridTemplateColumn.Header>
                    <TextBlock Text="{DynamicResource GroupSetup.Col.RobotGroup}"/>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{StaticResource RobotGroups}"
                SelectedItem="{Binding RobotGroup, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                MinWidth="120" Padding="6,2"
                IsTabStop="False"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>

                    <!-- На всякий случай такой же шаблон для режима редактирования -->
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{StaticResource RobotGroups}"
                SelectedItem="{Binding RobotGroup, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                MinWidth="120" Padding="6,2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>




                <!-- Имя -->
                <DataGridTextColumn Width="180">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="{DynamicResource GroupSetup.Col.Name}"/>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.Binding>
                        <Binding Path="Name" UpdateSourceTrigger="PropertyChanged"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

                <!-- Max X -->
                <DataGridTextColumn Width="100">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="{DynamicResource GroupSetup.Col.MaxX}"/>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.Binding>
                        <Binding Path="MaxX" Converter="{StaticResource NullDoubleConverter}"
             UpdateSourceTrigger="PropertyChanged"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

                <!-- Max Y -->
                <DataGridTextColumn Width="100">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="{DynamicResource GroupSetup.Col.MaxY}"/>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.Binding>
                        <Binding Path="MaxY" Converter="{StaticResource NullDoubleConverter}"
             UpdateSourceTrigger="PropertyChanged"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

                <!-- Max Z -->
                <DataGridTextColumn Width="100">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="{DynamicResource GroupSetup.Col.MaxZ}"/>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.Binding>
                        <Binding Path="MaxZ" Converter="{StaticResource NullDoubleConverter}"
             UpdateSourceTrigger="PropertyChanged"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

                <!-- Описание -->
                <DataGridTextColumn Width="*">
                <DataGridTextColumn.Header>
                    <TextBlock Text="{DynamicResource GroupSetup.Col.Description}"/>
                </DataGridTextColumn.Header>
                <DataGridTextColumn.Binding>
                    <Binding Path="Description" UpdateSourceTrigger="PropertyChanged"/>
                </DataGridTextColumn.Binding>
                </DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки управления (без Default) -->
        <!-- Панель: слева имя текущего файла, справа три кнопки -->
        <DockPanel Grid.Row="2" Margin="0,12,0,0">
            <!-- СЛЕВА: имя текущего файла -->
            <TextBlock x:Name="TxtCurrentFile"
           DockPanel.Dock="Left"
           VerticalAlignment="Center"
           Text="{DynamicResource GroupSetup.CurrentFilePrefixFallback}"
           TextTrimming="CharacterEllipsis"
           Margin="0,0,12,0"/>


            <!-- СПРАВА: кнопки -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="BtnOpen"
                Width="120" Height="32" Margin="0,0,8,0"
                Click="BtnOpen_Click"
                Content="{DynamicResource GroupSetup.Open}"/>

                <Button x:Name="BtnSave"
                Width="120" Height="32" Margin="0,0,8,0"
                Click="BtnSave_Click"
                Content="{DynamicResource GroupSetup.Save}"/>

                <Button x:Name="BtnSaveNew"
                Width="140" Height="32"
                Click="BtnSaveNew_Click"
                Content="{DynamicResource GroupSetup.SaveNew}"/>
            </StackPanel>
        </DockPanel>

    </Grid>
</UserControl>
