<Window x:Class="RoboScanner.CalibrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Calib.Window.Title}"
        
        Height="720" Width="980"
        MinHeight="600" MinWidth="820"
        WindowStartupLocation="CenterOwner">
    <Grid Background="#FFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Панель управления -->
            <RowDefinition Height="Auto"/>
            <!-- Настройки бинаризации -->
            <RowDefinition Height="8"/>
            <!-- Отступ -->
            <RowDefinition Height="*"/>
            <!-- Превью -->
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <Border Grid.Row="0" Padding="12" Background="#FAFAFA" BorderBrush="#DDD" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Блок размеров (редактируемые) -->
                <GroupBox Header="{DynamicResource Calib.Group.PartSizeMm}" Grid.Column="0" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="24"/>
                            
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- L / W -->
                        <TextBlock Text="{DynamicResource Calib.Label.Length}" VerticalAlignment="Center"/>
                        <TextBox x:Name="TxtOutL" Grid.Column="1" Margin="6,0,0,0" Height="28"/>
                        <TextBlock Text="{DynamicResource Calib.Label.Width}" Grid.Row="4" VerticalAlignment="Center"/>
                        <TextBox x:Name="TxtOutW" Grid.Row="4" Grid.Column="1" Margin="6,0,0,0" Height="28"/>

                        <!-- H -->
                        <TextBlock Text="{DynamicResource Calib.Label.Height}" Grid.Row="2" VerticalAlignment="Center"/>
                        <TextBox x:Name="TxtOutH" Grid.Row="2" Grid.Column="1" Margin="6,0,0,0" Height="28"/>
                    </Grid>
                </GroupBox>

                <!-- Кнопки: адаптивные (переносятся при узком окне) -->

                <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="16"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                    <Button x:Name="BtnCalibrate" Grid.Column="1" Grid.Row="1" Content="{DynamicResource Calib.Btn.Calibrate}" Width="150" Height="36" Margin="8,0,0,0"
                            Click="BtnCalibrate_Click"/>
                    <Button x:Name="BtnTestScan" Grid.Column="1" Grid.Row="3" Content="{DynamicResource Calib.Btn.TestScan}" Width="150" Height="36"
                            Margin="8,0,0,0" Click="BtnTestScan_Click"/>
                    <Button x:Name="BtnSave" Grid.Column="1" Grid.Row="5" Content="{DynamicResource Calib.Btn.Save}" Width="150" Height="36"
                            Margin="8,0,0,0" Click="BtnSave_Click"/>
                    </Grid>
                
            </Grid>
        </Border>

        <!-- ПАНЕЛЬ НАСТРОЕК БИНАРИЗАЦИИ (две колонки, как просил) -->
        <GroupBox Grid.Row="1" Header="{DynamicResource Calib.Group.BinarizeMorph}" Margin="12,8,12,0">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <!-- левая колонка -->
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <!-- правая колонка -->
                </Grid.ColumnDefinitions>

                <!-- Левая колонка -->
                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="12,8,12,0">
                    <CheckBox x:Name="ChkUseAdaptive" Content="{DynamicResource Calib.AdaptiveThreshold}" Margin="0,0,0,0" ToolTip="{DynamicResource Calib.TT.AdaptiveThreshold}"/>
                    <DockPanel LastChildFill="True" Margin="0,10,0,10">
                        <TextBlock Text="{DynamicResource Calib.Label.BlockSize}" VerticalAlignment="Center" Width="180"/>
                        <TextBox x:Name="TxtAdaptiveBlock" Height="26" MinWidth="80" Margin="6,0,0,0" ToolTip="{DynamicResource Calib.TT.BlockSize}"/>
                    </DockPanel>
                    <DockPanel LastChildFill="True" Margin="0,0,0,10">
                        <TextBlock Text="{DynamicResource Calib.Label.C}" VerticalAlignment="Center" Width="180"/>
                        <TextBox x:Name="TxtAdaptiveC" Height="26" MinWidth="80" Margin="6,0,0,0" ToolTip="{DynamicResource Calib.TT.C}"/>
                    </DockPanel>

                    <CheckBox x:Name="ChkUseClahe" Content="{DynamicResource Calib.Clahe}" Margin="0,10,0,10" ToolTip="{DynamicResource Calib.TT.Clahe}"/>
                    <DockPanel LastChildFill="True">
                        <TextBlock Text="{DynamicResource Calib.Label.ClipLimit}" VerticalAlignment="Center" Width="180"/>
                        <TextBox x:Name="TxtClaheClip" Height="26" MinWidth="80" Margin="6,0,0,0" ToolTip="{DynamicResource Calib.TT.ClipLimit}"/>
                    </DockPanel>
                    <DockPanel LastChildFill="True" Margin="0,10,0,0">
                        <TextBlock Text="{DynamicResource Calib.Label.TileGrid}" VerticalAlignment="Center" Width="180"/>
                        <TextBox x:Name="TxtClaheTiles" Height="26" MinWidth="80" Margin="6,0,0,0" ToolTip="{DynamicResource Calib.TT.TileGrid}"/>
                    </DockPanel>
                </StackPanel>

                <!-- Правая колонка -->
                <StackPanel Grid.Column="2" Orientation="Vertical" Margin="12,8,12,0">
                    <DockPanel LastChildFill="True">
                        <TextBlock Text="{DynamicResource Calib.Label.BlurKernel}" VerticalAlignment="Center" Width="220"/>
                        <TextBox x:Name="TxtBlurKernel" Height="26" MinWidth="80" Margin="6,0,0,0" ToolTip="{DynamicResource Calib.TT.BlurKernel}"/>
                    </DockPanel>

                    <CheckBox x:Name="ChkInvert" Content="{DynamicResource Calib.InvertObjectWhite}" Margin="0,10,0,10" ToolTip="{DynamicResource Calib.TT.Invert}"/>

                    <DockPanel LastChildFill="True">
                        <TextBlock Text="{DynamicResource Calib.Label.MinAreaPct}" VerticalAlignment="Center" Width="220"/>
                        <TextBox x:Name="TxtMinAreaPct" Height="26" MinWidth="80" Margin="6,0,0,0" ToolTip="{DynamicResource Calib.TT.MinAreaPct}"/>
                    </DockPanel>
                    <DockPanel LastChildFill="True">

                        <Button x:Name="BtnSaveSettings"  Content="{DynamicResource Calib.Btn.SaveBinarize}" Width="150" Height="36" Margin="8,10,0,0"
                            Click="BtnSaveSettings_Click"/>
                    </DockPanel>
                </StackPanel>
            </Grid>
            
        </GroupBox>

        <!-- Отступ -->
        <Border Grid.Row="2" Background="Transparent"/>

        <!-- Превью и статусы -->
        <Grid Grid.Row="3" Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Статусы -->
            <TextBlock x:Name="LblTop"  Grid.Row="0" Grid.Column="0"
                       Text="{DynamicResource Calib.MmPerPxTopNotSet}" FontSize="13" Foreground="#444"/>
            <TextBlock x:Name="LblSide" Grid.Row="0" Grid.Column="2"
                       Text="{DynamicResource Calib.MmPerPxSideNotSet}" FontSize="13" Foreground="#444"/>

            <!-- Изображения -->
            <Border Grid.Row="2" Grid.Column="0" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6" Padding="6">
                <Viewbox Stretch="Uniform">
                    <Image x:Name="ImgTop" Stretch="Uniform"/>
                </Viewbox>
            </Border>

            <Border Grid.Row="2" Grid.Column="2" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6" Padding="6">
                <Viewbox Stretch="Uniform">
                    <Image x:Name="ImgSide" Stretch="Uniform"/>
                </Viewbox>
            </Border>
        </Grid>
    </Grid>
</Window>
